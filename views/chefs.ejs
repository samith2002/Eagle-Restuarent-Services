<%- include("partials/header"); -%>
<head></head>
<body>
    <center>
        <% if (resid === '12') { %>
            <img src="/images/starbucks.png" alt="Starbucks Logo" class="starbucksmainimg">
        <% } else if (resid === '23') { %>
            <img src="/images/bk.png" alt="Burger King Logo" class="starbucksmainimg">
        <% } %>
      </center>

<div class="container mt-5" style="margin-top: 20px;">
    <h3><%= title %></h3>
    
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Shift</th>
                <th>Phone Number</th>
                <th>Mail</th>
                <th>Admin id</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            <% data.forEach(employee => { %>
                <tr>
                    <td><%= employee.chef_id %></td>
                    <td><%= employee.chef_name %></td>
                    <td><%= employee.chef_work_shift %></td>
                    <td><%= employee.chef_phone_num %></td>
                    <td><%= employee.chef_mail %></td>
                    <td><%= employee.admin_id %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Assign Button -->
    <button class="btn btn-primary" onclick="toggleAssignFields()">
        Assign Shifts +
    </button>

    <% if (resid === '12') { %>
        <form action="/assignchef/12" method="post">
            <div id="assignFields" style="display: none;">
                <!-- Your 7 input fields go here -->
                <div class="form-group">
                    <label for="field1">Emp id</label>
                    <input type="text" class="form-control" id="field1" name="empid">
                    <label for="field1">Name</label>
                    <input type="text" class="form-control" id="field1" name="name">
                    <label for="field1">Shift</label>
                    <input type="text" class="form-control" id="field1" name="shift">
                    <label for="field1">Phone Number</label>
                    <input type="text" class="form-control" id="field1" name="phonenum">
                    <label for="field1">Mail</label>
                    <input type="text" class="form-control" id="field1" name="mail">
                    <label for="field1">Admin id</label>
                    <input type="text" class="form-control" id="field1" name="adminid">
                </div>
              
        
        
                <button class="btn btn-success" type="submit" style="margin-top: 10px;">Submit</button>
            </div>
        
        </form>
    <% } else if (resid === '23') { %>
        <form action="/assignchef/23" method="post">
            <div id="assignFields" style="display: none;">
                <!-- Your 7 input fields go here -->
                <div class="form-group">
                    <label for="field1">Emp id</label>
                    <input type="text" class="form-control" id="field1" name="empid">
                    <label for="field1">Name</label>
                    <input type="text" class="form-control" id="field1" name="name">
                    <label for="field1">Shift</label>
                    <input type="text" class="form-control" id="field1" name="shift">
                    <label for="field1">Phone Number</label>
                    <input type="text" class="form-control" id="field1" name="phonenum">
                    <label for="field1">Mail</label>
                    <input type="text" class="form-control" id="field1" name="mail">
                    <label for="field1">Admin id</label>
                    <input type="text" class="form-control" id="field1" name="adminid">
                </div>
              
        
        
                <button class="btn btn-success" type="submit" style="margin-top: 10px;">Submit</button>
            </div>
        
        </form>
    <% } %>

  
   
    <!-- <div style="width: 350;height: 350;">
        <canvas id="employeeChart" width="400" height="400"></canvas>
    </div> -->

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Dummy data for the pie chart (replace with your actual data)
        var pieData = {
            labels: ["Part-Time", "Full-Time", "Chefs"],
            datasets: [{
                data: [30, 40, 30], // Replace with actual data percentages
                backgroundColor: ["#007bff", "#28a745", "#6610f2"],
            }]
        };

        var ctx = document.getElementById('employeeChart').getContext('2d');
        var myPieChart = new Chart(ctx, {
            type: 'pie',
            data: pieData,
        });

        function toggleAssignFields() {
            var assignFields = document.getElementById('assignFields');
            assignFields.style.display = assignFields.style.display === 'none' ? 'block' : 'none';
        }

       
    </script>
</div>

</body>
</html>
