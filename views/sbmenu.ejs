            <script>
                const quantityInputs = document.querySelectorAll('.sbquantity');
                const decreaseButtons = document.querySelectorAll('.decreasebtn');
                const increaseButtons = document.querySelectorAll('.increasebtn');
                const totalPriceSpans = document.querySelectorAll('.totalPrice');
                const hidden = document.querySelectorAll('.totalPriceInput');
                


                const initialPrice = 12.99;


                function updateTotalPrice(index) {
                    
                    const quantity = parseInt(quantityInputs[index].value);

                    const totalPrice = initialPrice * quantity;

                    totalPriceSpans[index].textContent = `${totalPrice.toFixed(2)}`;

                    hidden[index].value = totalPrice.toFixed(2);
                }


                for (let i = 0; i < quantityInputs.length; i++) {
                    decreaseButtons[i].addEventListener('click', function () {
                        if (quantityInputs[i].value > 1) {
                            quantityInputs[i].value = parseInt(quantityInputs[i].value) - 1;
                            updateTotalPrice(i);
                        }
                    });

                    increaseButtons[i].addEventListener('click', function () {
                        quantityInputs[i].value = parseInt(quantityInputs[i].value) + 1;
                        updateTotalPrice(i);
                    });

                    updateTotalPrice(i);
                }
            </script>   
